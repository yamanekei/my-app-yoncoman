= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :comment
    = f.text_field :comment
  .field
    = f.label :image
    = f.text_field :image
  .actions
    = f.submit 'Save'
